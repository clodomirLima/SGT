<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>bean.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarUsuarioServlet</servlet-name>
        <servlet-class>bean.CadastrarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarIdServlet</servlet-name>
        <servlet-class>bean.AlterarIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarUsuarioServlet</servlet-name>
        <servlet-class>bean.AlterarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcluirIdServlet</servlet-name>
        <servlet-class>bean.ExcluirIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarIdResponsavelServlet</servlet-name>
        <servlet-class>bean.AlterarIdResponsavelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarResponsavelServlet</servlet-name>
        <servlet-class>bean.AlterarResponsavelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcluirIdResponsavelServlet</servlet-name>
        <servlet-class>bean.ExcluirIdResponsavelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/pug</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarUsuarioServlet</servlet-name>
        <url-pattern>/cadUsr</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarIdServlet</servlet-name>
        <url-pattern>/altId</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarUsuarioServlet</servlet-name>
        <url-pattern>/alt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluirIdServlet</servlet-name>
        <url-pattern>/excId</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarIdResponsavelServlet</servlet-name>
        <url-pattern>/altIdResp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarResponsavelServlet</servlet-name>
        <url-pattern>/altResp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluirIdResponsavelServlet</servlet-name>
        <url-pattern>/excIdResp</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
